@model Unidad3P1.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="w-50">
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionCorta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionCorta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionLarga)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionLarga)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaNombre)
        </dd>
    </dl>
</div>




<div>
    <a asp-controller="Categorias" class="text-white" asp-action="ProductosCategoria" asp-route-id="@Model?.ProductoId">comprar</a>

    <a asp-controller="Categorias" class="text-white" asp-action="ProductosCategoria" asp-route-id="@Model?.Categoria.CategoriaId" class="btn me-2 text-white">Volver lista</a>
</div>



