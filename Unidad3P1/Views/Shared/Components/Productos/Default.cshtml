@model IEnumerable<Unidad3P1.ViewModels.ProductoViewModel>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <img class="card-img-top" src="@item.ImagenUrl" alt="Imagen de @item.Nombre"/>
                <div class="card-body text-center">
                    <h2 class="card-title font-weight-bold">@item.Nombre</h2>
                    <p class="card-text text-white">Precio: @item.Precio Bs</p>
                    <div class="d-flex justify-content-center">
                        <a asp-controller="Productos" asp-action="ProductosDetalles" asp-route-id="@item.ProductoId" class="btn me-2 text-white">Ver Detalles</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
